<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        tools:layout="@layout/fragment_home"
        android:id="@+id/homeFragment"
        android:name="com.example.streamingapp.ui.view.homescreen.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_video_player"
        android:id="@+id/videoPlayerFragment"
        android:name="com.example.streamingapp.ui.view.videoplayer.VideoPlayerFragment"
        android:label="VideoPlayerFragment" >
        <action
            android:id="@+id/action_videoPlayerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            app:nullable="false"
            android:name="movie"
            app:argType="com.example.streamingapp.network.model.Movie" />
    </fragment>
</navigation>